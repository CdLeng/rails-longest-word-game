<div class="container mt-5">
  <h2>New game</h2>
  <div class="row col-10">
    <% @letters.each do |letter| %>
          <div class="letter bg-primary"><%= letter %></div>
    <% end %>
  </div>
  <form action="/score" data-turbo="false" class="row col-6 mt-5">
    <label for="word" class="form-label">What is the longest word you can find?</label>
    <div class="input-group input-group-lg">
      <input type="text" name="word" placeholder="Longest word" class="form-control">
      <input type="submit" value="Play" class="btn btn-primary">
    </div>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>

  </form>
</div>
